{
  "name": "blackcatacademy/blackcat-core",
  "description": "BlackCat Store core libs â€” libsodium-based encryption framework for e-commerce (proprietary)",
  "type": "library",
  "license": "proprietary",
  "homepage": "https://github.com/blackcatacademy/blackcat-core",
  "keywords": ["ecommerce", "security", "libsodium", "encryption", "storekit"],
  "authors": [
    {
      "name": "Black Cat Academy s. r. o.",
      "email": "backcatacademy@protonmail.com",
      "role": "owner"
    }
  ],
  "support": {
    "email": "backcatacademy@protonmail.com",
    "issues": "https://github.com/blackcatacademy/blackcat-core/issues",
    "source": "https://github.com/blackcatacademy/blackcat-core"
  },
  "require": {
    "php": "^8.1",
    "ext-pdo": "*",
    "ext-json": "*",
    "ext-sodium": "*",
    "psr/simple-cache": "^1.0 || ^2.0 || ^3.0",
    "psr/log": "^1.1 || ^2.0 || ^3.0"
  },
  "suggest": {
    "ext-mbstring": "Improves SQL preview sanitization and multibyte handling in logs."
  },
  "autoload": {
    "psr-4": {
      "BlackCat\\Core\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "BlackCat\\Core\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit --colors=always"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "extra": {
    "branch-alias": {
      "dev-main": "1.x-dev"
    }
  },
  "archive": {
    "exclude": [
      "tests",
      ".github",
      "docs",
      "examples",
      "Makefile",
      "phpunit.xml*",
      "phpstan.neon*",
      ".php-cs-fixer.php"
    ]
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
