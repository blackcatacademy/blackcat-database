{
  "tables": {
    "users": {
      "columns": {
        "ssn": {"strategy": "encrypt", "context": "core.vault"},
        "email_hash": {"strategy": "hmac", "context": "core.hmac.email", "encoding": "hex"}
      }
    },
    "orders": {
      "columns": {
        "card_pan": {"strategy": "encrypt", "context": "payments.card"},
        "card_pan_last4": {"strategy": "passthrough"},
        "card_pan_token": {"strategy": "hmac", "context": "payments.card.token", "encoding": "base64"}
      }
    }
  }
}
