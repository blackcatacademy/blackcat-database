{
  "name": "blackcatacademy/blackcat-database-crypto",
  "description": "Transparent crypto adapter for BlackCat Database writes (field-level envelope encryption + HMAC).",
  "type": "library",
  "license": "proprietary",
  "require": {
    "php": "^8.2",
    "ext-json": "*",
    "blackcatacademy/blackcat-crypto": "dev-main",
    "blackcatacademy/blackcat-database": "dev-main"
  },
  "autoload": {
    "psr-4": {
      "BlackCat\\DatabaseCrypto\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "BlackCat\\DatabaseCrypto\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
